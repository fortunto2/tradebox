# Binance API Credentials
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Database Configuration
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/tradebox
# For SQLite: sqlite+aiosqlite:///./tradebox.db
DB_CONNECTION_STR=sqlite+aiosqlite:///./tradebox.db

# Prefect Configuration
PREFECT_API_URL=http://127.0.0.1:4200/api
PREFECT_UI_URL=http://127.0.0.1:4200

# Trading Configuration
# Comma-separated list of symbols to monitor
SYMBOLS=BTCUSDT,ETHUSDT

# Optional: Sentry error tracking
SENTRY_DSN=

# Optional: Logging level
LOG_LEVEL=INFO
